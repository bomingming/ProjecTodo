<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjecTodo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightpink</item>
        <item name="colorPrimaryVariant">@color/lightpink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>
    <!--DatePicker 테마 설정-->
    <style name="MyDatePickerStyle" parent="@android:style/Widget.DatePicker">
        <item name="android:headerBackground">@color/lightpink</item>
        <item name="android:datePickerMode">calendar</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name = "android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">@dimen/popup_width</item>
        <item name="android:windowMinWidthMinor">@dimen/popup_height</item>
    </style>
</resources>