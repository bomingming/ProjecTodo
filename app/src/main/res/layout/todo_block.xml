<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/todo_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/todo_add_btn"
        app:layout_constraintTop_toBottomOf="@+id/todo_add_btn" />

    <EditText
        android:id="@+id/todo_list"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightpink"
        android:inputType="text"
        android:textCursorDrawable="@color/lightpink"
        app:layout_constraintStart_toEndOf="@+id/todo_check"
        app:layout_constraintTop_toBottomOf="@+id/todo_add_btn" />

    <ImageButton
        android:id="@+id/delete_todo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:src="@drawable/delete_todo_icon"
        app:layout_constraintStart_toEndOf="@+id/todo_list"
        app:layout_constraintTop_toTopOf="@+id/todo_list" />

</LinearLayout>